{
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "extends": [
        "eslint:recommended"
    ],
    "rules": {
        "semi": 2,
        "no-const-assign": 2,
        "no-console": 0,
        "no-unused-vars": [ "error", { "argsIgnorePattern": "^_" }]
    },
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "globals": {
        "Uint8Array": true,
        "Float32Array": true,
        "Promise": true
    }
}